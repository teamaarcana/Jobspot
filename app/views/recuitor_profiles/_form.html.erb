<section class="job-bg user-page">
  <div class="container">
    <div class="row text-center">
      <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">


      <%= form_for @recuitor_profile do |f| %>
        <% if recuitor_profile.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(recuitor_profile.errors.count, "error") %> prohibited this recuitor_profile from being saved:</h2>

            <ul>
            <% recuitor_profile.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>


        <div class="tab-content">
          <div role="tabpanel" class="tab-pane active" id="find-job">
            <div class="form-group">
              <%= f.label :company_name, class:"pull-left text-white" %><br />
              <%= f.text_field :company_name, :required => true, class:"form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :contact_no, class:"pull-left text-white" %><br />
              <%= f.text_field :contact_no, :required => true, class:"form-control" %>
            </div>
            <div class="field">
              <%= f.label :address, class:"pull-left text-white" %><br />
              <%= f.text_field :address, :required => true, class:"form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :pan_no, class:"pull-left text-white" %><br />
              <%= f.text_field :pan_no,class:"form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :industry, class:"pull-left text-white" %><br />
              <%= f.text_field :industry, :required => true, class:"form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :website, class:"pull-left text-white" %><br />
              <%= f.text_field :website,class:"form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :email, class:"pull-left text-white" %><br />
              <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
            </div>

            <div class="form-group">
              <%= f.label :description, class:"text-white" %><br />
              <%= f.cktext_area :description, class: 'someclass', ckeditor: { language: 'uk'} %>
            </div>

            <div class="actions">
              <%= f.submit "Update", :class => 'btn-primary' %>
            </div>
          <% end %>
          </div><!-- user-login -->
        </div><!-- row -->
      </div><!-- container -->
    </div>
  </div>
</section><!-- signup-page -->
