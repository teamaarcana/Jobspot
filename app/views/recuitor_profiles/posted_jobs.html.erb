<div class="container">
	<div class="row">
		<div class="section latest-jobs-ads">
			<div class="section-title tab-manu">
				<h3 class="text-center">Posted Jobs</h3>
			</div>

			<div class="tab-content">
				<% @job_posts.each do |job_post| %>
				<div class="job-ad-item shadow">
					<div class="item-info">
						<div class="ad-info">
							<span><a href="job-details.html" class="title"><%= link_to job_post.job_title, applied_seeker_path(job_post) %></a></span>
							<div class="ad-meta">
								<ul>
									<li><i class="fa fa-map-marker" aria-hidden="true"></i><%= job_post.location %></li>
									<li><i class="fa fa-clock-o" aria-hidden="true"></i><%= job_post.job_type %></li>
									<li><i class="fa fa-tags" aria-hidden="true"></i><%= job_post.department %></li>
								</ul>
							</div><!-- ad-meta -->
						</div><!-- ad-info -->

						<div class="button">
							<%= button_to "Delete", job_post_path(job_post) ,method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-danger" %>
						</div>
					</div>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
