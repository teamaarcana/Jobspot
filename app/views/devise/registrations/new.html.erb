<section class="job-bg user-page">
  <div class="container">
    <div class="row text-center">
      <!-- user-login -->
      <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
        <div class="user-account job-user-account">
          
          <% if request.fullpath == "/recuitors/sign_up" %>
            <h2>Recruitor's SignUp</h2>
          <% elsif request.fullpath == "/seekers/sign_up" %>       
            <h2>Seeker's SignUp</h2>
          <% end %>

            <ul class="nav nav-tabs text-center" role="tablist">
              <li role="presentation"><%=link_to 'Find A Job',new_seeker_registration_path %></li>
              <li role="presentation"><%=link_to 'Post A Job',new_recuitor_registration_path %></li>
            </ul>

            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="find-job">
                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= devise_error_messages! %>

                    <div class="form-group">
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", :required => true, class: "form-control", placeholder: "Email" %>
                    </div>

                    <div class="form-group">
                      <% if @minimum_password_length %>
                        <em class="pull-left">(Password must be <%= @minimum_password_length %> characters minimum)</em>
                      <% end %><br />
                      <%= f.password_field :password, autocomplete: "off", :required => true, :pattern=>".{6,}", :title=>"Six or more characters", class: "form-control", placeholder: "Password" %>
                    </div>

                    <div class="form-group">
                      <%= f.password_field :password_confirmation, autocomplete: "off", :required => true, :pattern=>".{6,}", :title=>"Six or more characters", class: "form-control", placeholder: "Confirm Password" %>
                    </div>

                    <div class="actions">
                      <%= f.submit "Sign up", class: "btn" %>
                    </div>
                  <% end %>

                  <div class="forgot-password">
                    Already have an account? <%= render "devise/shared/links" %>
                  </div>
        </div>
      </div><!-- user-login -->
    </div><!-- row -->
  </div><!-- container -->
</section><!-- signup-page -->
